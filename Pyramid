class Pyramid
{ 
    public static void main(String[] args) {
        int n, i, k, space=1;
        n = 4;
        space= n-1;
        for (k=1; k<=n; k++)
        {
            for (i=1; i<=space; i++)
			{
                System.out.print(" ");
			}	
            space--;
            for (i=1; i<=(2*k)-1; i++)
			{
                System.out.print("*");
			}
            System.out.println();
        }
	}
}
