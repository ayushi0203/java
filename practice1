class Message{
	public static void main(String [] args){
		System.out.println("Welcome to java world!");
	}
}

OUTPUT:
D:\java_programs>javac Message.java

D:\java_programs>java Message
Welcome to java world!

class Add{
	public static void main(String [] args){
		int a=1,b=2,c;
		c=a+b;
		System.out.println("first value is:"+a);
		System.out.println("second value is:"+b);
		System.out.println("SUM: "+c);
		System.out.println(args[0]);
		System.out.println(args[1]);
		System.out.println(args[2]);
		
		
	}
}


import java.util.Scanner;
class Input{
	public static void main(String [] args)
	{
		int a,b,c;
		Scanner sc= new Scanner(System.in);
		System.out.println("First no.:");
		a=sc.nextInt();
		System.out.println("Second no.:");
		b=sc.nextInt();
		c=a+b;
		System.out.println("Sum is:"+c);
	}
}
D:\java_programs>java Input
First no.:
10
Second no.:
20
Sum is:30

import java.util.Scanner;
class Name{
	public static void main(String [] args)
	{
		String a;
		Scanner sc= new Scanner(System.in);
		System.out.println("Name.:");
		a=sc.next();
		System.out.println("Name is:"+a);
	}
}
D:\java_programs>javac Name.java

D:\java_programs>java Name
Name.:
Smridhi Chawla
Name is:Smridhi

import java.util.Scanner;
class Name{
	public static void main(String [] args)
	{
		String a;
		Scanner sc= new Scanner(System.in);
		System.out.println("Name.:");
		a=sc.nextLine();
		System.out.println("Name is:"+a);
	}
}
D:\java_programs>javac Name.java

D:\java_programs>java Name
Name.:
Smridhi Chawla
Name is:Smridhi Chawla
